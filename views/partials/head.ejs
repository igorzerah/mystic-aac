<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - OTServer</title>
    <link rel="stylesheet" href="/styles.css">
    <% if (locals.extraCSS) { %>
        <link rel="stylesheet" href="<%= extraCSS.startsWith('/') ? extraCSS : '/' + extraCSS %>">
    <% } %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="sidebar">
            <img src="/images/logo.png" alt="Server Logo" class="logo">
            
            <div class="quick-actions">
                <a href="/download" class="btn btn-download"><i class="fas fa-download"></i> Download</a>
                <% if (locals.user) { %>
                    <a href="/dashboard" class="btn btn-login"><i class="fas fa-user"></i> Minha Conta</a>
                <% } else { %>
                    <a href="/account/login" class="btn btn-login"><i class="fas fa-sign-in-alt"></i> Login</a>
                <% } %>
            </div>
            
            <div class="menu-section">
                <h3>Principal</h3>
                <ul>
                    <li><a href="/"><i class="fas fa-home"></i> Início</a></li>
                    <li><a href="/download"><i class="fas fa-download"></i> Download</a></li>
                    <li><a href="/news"><i class="fas fa-newspaper"></i> Notícias</a></li>
                </ul>
            </div>

            <div class="menu-section">
                <h3>Comunidade</h3>
                <ul>
                    <li><a href="/characters"><i class="fas fa-users"></i> Personagens</a></li>
                    <li><a href="/highscores"><i class="fas fa-trophy"></i> Ranking</a></li>
                    <li><a href="/guilds"><i class="fas fa-shield-alt"></i> Guildas</a></li>
                    <li><a href="/deaths"><i class="fas fa-skull"></i> Últimas Mortes</a></li>
                </ul>
            </div>

            <div class="menu-section">
                <h3>Conta</h3>
                <ul>
                    <% if (locals.user) { %>
                        <li><a href="/dashboard"><i class="fas fa-user"></i> Meu Painel</a></li>
                        <li><a href="/account/logout"><i class="fas fa-sign-out-alt"></i> Sair</a></li>
                    <% } else { %>
                        <li><a href="/account/create"><i class="fas fa-user-plus"></i> Criar Conta</a></li>
                        <li><a href="/account/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
                    <% } %>
                </ul>
            </div>

            <div class="menu-section">
                <h3>Suporte</h3>
                <ul>
                    <li><a href="/support"><i class="fas fa-question-circle"></i> Ajuda</a></li>
                    <li><a href="https://discord.gg/server" target="_blank"><i class="fab fa-discord"></i> Discord</a></li>
                </ul>
            </div>
        </div>

        <div class="content">
            <div class="content-wrapper">
